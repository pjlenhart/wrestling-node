{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "target": "ES2022",
        "outDir": "dist",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "sourceMap": true,
        "paths": {
            "*": ["node_modules/*"]
        },
        "types": ["node"],
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["src/**/*"]
}
